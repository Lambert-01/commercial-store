<%- include('../partials/header') %>

<!-- Register Section with Tailwind -->
<section class="min-h-screen flex items-center justify-center py-16 bg-gradient-to-br from-neutral-50 to-neutral-100">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto">
      <!-- Register Card -->
      <div class="bg-white rounded-2xl shadow-2xl p-8 animate__animated animate__fadeInUp"
           data-aos="zoom-in">

        <!-- Header -->
        <div class="text-center mb-8">
          <div class="w-20 h-20 bg-rwanda-gradient-yellow mx-auto mb-4 rounded-full flex items-center justify-center text-3xl animate-bounce">
            ğŸ“
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-2">
            Join Ecommerce Rwanda
          </h1>
          <p class="text-neutral-600">
            Create your account and start your journey with us
          </p>
        </div>

        <!-- Error Message -->
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="bg-error-50 border border-error-200 text-error-700 p-4 rounded-lg mb-6 text-sm animate__animated animate__shake"
               data-aos="shake">
            âš ï¸ <%= error %>
          </div>
        <% } %>

        <!-- Register Form -->
        <form action="/register" method="POST" class="space-y-6">
          <div>
            <label for="name" class="form-label-rwanda">Full Name</label>
            <input type="text"
                   id="name"
                   name="name"
                   placeholder="Enter your full name"
                   class="form-input-rwanda"
                   required>
          </div>

          <div>
            <label for="email" class="form-label-rwanda">Email Address</label>
            <input type="email"
                   id="email"
                   name="email"
                   placeholder="Enter your email address"
                   class="form-input-rwanda"
                   required>
          </div>

          <div>
            <label for="password" class="form-label-rwanda">Password</label>
            <input type="password"
                   id="password"
                   name="password"
                   placeholder="Create a strong password"
                   class="form-input-rwanda"
                   required
                   minlength="6">
          </div>

          <div>
            <label for="role" class="form-label-rwanda">Account Type</label>
            <select id="role"
                    name="role"
                    class="form-input-rwanda"
                    required>
              <option value="customer">ğŸ›’ Customer - Shop and buy products</option>
              <option value="supplier">ğŸª Supplier - Sell your products</option>
