<%- include('../partials/header') %>

<h2>All Products</h2>
<div class="products">
  <% products.forEach(product => { %>
    <div class="product">
      <h3><%= product.name %></h3>
      <p><%= product.description %></p>
      <p>Price: $<%= product.price %></p>
      <button class="add-to-cart" data-product-id="<%= product._id %>">Add to Cart</button>
    </div>
  <% }); %>
</div>

<%- include('../partials/footer') %>