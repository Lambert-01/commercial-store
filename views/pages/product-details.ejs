<%- include('../partials/header') %>

<!-- Product Details Section with Rwandan Design System -->
<section class="py-12 bg-neutral-50 min-h-screen" data-aos="fade-up">
  <div class="container mx-auto px-4">
    <!-- Request ID for debugging -->
    <% if (typeof requestId !== 'undefined') { %>
      <div class="bg-primary bg-opacity-10 border border-primary border-opacity-20 rounded-lg p-3 mb-6">
        <p class="text-primary text-sm font-medium">Request ID: <%= requestId %></p>
      </div>
    <% } %>

    <!-- Breadcrumb Navigation -->
    <nav class="mb-8" data-aos="fade-up" data-aos-delay="100">
      <ol class="flex items-center space-x-2 text-sm text-neutral-600">
        <li><a href="/" class="hover:text-primary transition-colors duration-200">Home</a></li>
        <li class="text-neutral-400">/</li>
        <li><a href="/products" class="hover:text-primary transition-colors duration-200">Products</a></li>
        <li class="text-neutral-400">/</li>
        <li><a href="/products/supplier/<%= product.supplier._id %>" class="hover:text-primary transition-colors duration-200"><%= product.supplier.name %></a></li>
        <li class="text-neutral-400">/</li>
        <li class="text-primary font-medium"><%= product.name %></li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Product Image -->
      <div class="bg-white rounded-xl shadow-lg p-8" data-aos="fade-right" data-aos-delay="200">
        <div class="aspect-square bg-gradient-to-br from-neutral-200 to-neutral-300 rounded-xl flex items-center justify-center text-8xl mb-6">
          üì¶
        </div>

        <!-- Product Gallery Thumbnails (placeholder for future) -->
        <div class="flex gap-2 justify-center">
          <div class="w-16 h-16 bg-neutral-300 rounded-lg flex items-center justify-center text-2xl opacity-50">üì¶</div>
          <div class="w-16 h-16 bg-neutral-300 rounded-lg flex items-center justify-center text-2xl opacity-50">üì¶</div>
          <div class="w-16 h-16 bg-neutral-300 rounded-lg flex items-center justify-center text-2xl opacity-50">üì¶</div>
        </div>
      </div>

      <!-- Product Information - Optimized -->
      <div class="space-y-4" data-aos="fade-left" data-aos-delay="300">
        <!-- Product Title and Basic Info -->
        <div>
          <h1 class="text-xl md:text-2xl font-semibold text-neutral-900 mb-3">
            <%= product.name %>
          </h1>

          <!-- Supplier Info - Compact -->
          <div class="flex items-center gap-2 mb-4 p-3 bg-primary bg-opacity-5 rounded-lg border border-primary border-opacity-10">
            <div class="w-8 h-8 bg-primary bg-opacity-10 rounded-full flex items-center justify-center">
              üè™
            </div>
            <div>
              <p class="text-neutral-600 text-xs">Sold by</p>
              <a href="/products/supplier/<%= product.supplier._id %>"
                 class="text-primary hover:text-primary-600 font-medium text-sm transition-colors duration-200">
                <%= product.supplier.name %>
              </a>
            </div>
          </div>

          <!-- Price and Stock - Compact -->
          <div class="flex items-center gap-4 mb-4">
            <div class="text-2xl font-bold text-rwanda-yellow">
              <%= product.price.toLocaleString() %> RWF
            </div>

            <% if (product.stock > 0) { %>
              <div class="flex items-center gap-1">
                <span class="w-2 h-2 bg-success rounded-full"></span>
                <span class="text-success font-medium text-sm"><%= product.stock %> in stock</span>
              </div>
            <% } else { %>
              <div class="flex items-center gap-1">
                <span class="w-2 h-2 bg-error rounded-full"></span>
                <span class="text-error font-medium text-sm">Out of stock</span>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Description - Compact -->
        <div class="bg-white rounded-xl shadow-sm p-4 border border-neutral-200">
          <h3 class="text-base font-semibold text-neutral-900 mb-3">Description</h3>
          <p class="text-neutral-600 text-sm leading-relaxed">
            <%= product.description %>
          </p>
        </div>

        <!-- Add to Cart Section - Compact -->
        <% if (product.stock > 0) { %>
          <div class="bg-white rounded-xl shadow-sm p-4 border border-neutral-200">
            <h3 class="text-base font-semibold text-neutral-900 mb-3">Add to Cart</h3>

            <% if (isAuthenticated) { %>
              <form method="POST" action="/cart/add" class="space-y-3">
                <input type="hidden" name="productId" value="<%= product._id %>">

                <div class="grid grid-cols-2 gap-3">
                  <div>
                    <label class="block text-xs font-medium text-neutral-700 mb-1">Quantity</label>
                    <select name="quantity"
                            class="form-input-rwanda w-full text-sm"
                            data-price="<%= product.price %>"
                            onchange="updateTotal(this.getAttribute('data-price'), this.value)">
                      <% for (let i = 1; i <= Math.min(product.stock, 10); i++) { %>
                        <option value="<%= i %>" <%= i === 1 ? 'selected' : '' %>><%= i %></option>
                      <% } %>
                    </select>
                  </div>

                  <div>
                    <label class="block text-xs font-medium text-neutral-700 mb-1">Total Price</label>
                    <div class="text-lg font-bold text-rwanda-yellow" id="totalPrice">
                      <%= product.price.toLocaleString() %> RWF
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn-rwanda w-full text-sm py-2.5">
                  üõí Add to Cart
                </button>
              </form>
            <% } else { %>
              <div class="text-center">
                <p class="text-neutral-600 text-sm mb-3">Login to add this product to your cart</p>
                <a href="/login" class="btn-rwanda text-sm px-4 py-2">
                  üîë Login to Purchase
                </a>
              </div>
            <% } %>
          </div>
        <% } %>

        <!-- Product Features - Compact -->
        <div class="bg-white rounded-xl shadow-sm p-4 border border-neutral-200">
          <h3 class="text-base font-semibold text-neutral-900 mb-3">Product Features</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <div class="flex items-center gap-2">
              <span class="w-6 h-6 bg-success bg-opacity-10 rounded-full flex items-center justify-center text-success text-sm">‚úÖ</span>
              <span class="text-neutral-600 text-sm">Authentic Rwandan product</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="w-6 h-6 bg-primary bg-opacity-10 rounded-full flex items-center justify-center text-primary text-sm">üè™</span>
              <span class="text-neutral-600 text-sm">Verified local supplier</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="w-6 h-6 bg-warning bg-opacity-10 rounded-full flex items-center justify-center text-warning text-sm">üì±</span>
              <span class="text-neutral-600 text-sm">Mobile money payments</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="w-6 h-6 bg-accent bg-opacity-10 rounded-full flex items-center justify-center text-accent text-sm">üöö</span>
              <span class="text-neutral-600 text-sm">Fast local delivery</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Products - Compact -->
    <% if (typeof relatedProducts !== 'undefined' && relatedProducts.length > 0) { %>
      <div class="mt-8" data-aos="fade-up" data-aos-delay="500">
        <h2 class="text-lg md:text-xl font-semibold text-neutral-900 mb-4 text-center">
          More from <%= product.supplier.name %>
        </h2>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
          <% relatedProducts.forEach((relatedProduct, index) => { %>
            <div class="product-card-compact group relative bg-white rounded-lg shadow-sm hover:shadow-md transition-all duration-300 border border-neutral-200 overflow-hidden"
                 data-aos="fade-up"
                 data-aos-delay="<%= 600 + (index * 100) %>">

              <!-- Product Image - Compact -->
              <div class="relative h-20 bg-gradient-to-br from-neutral-50 to-neutral-100 flex items-center justify-center text-2xl">
                üì¶
              </div>

              <!-- Product Info - Compact -->
              <div class="p-2">
                <h3 class="font-medium text-neutral-900 mb-1 line-clamp-1 text-xs leading-tight">
                  <%= relatedProduct.name %>
                </h3>
                <div class="text-sm font-bold text-rwanda-yellow mb-2">
                  <%= relatedProduct.price.toLocaleString() %> RWF
                </div>
                <a href="/product/<%= relatedProduct._id %>"
                   class="bg-primary hover:bg-primary-600 text-white text-center py-1.5 px-2 rounded text-xs font-medium w-full block transition-colors duration-200">
                  View
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Supplier Store CTA - Compact -->
    <div class="mt-8 bg-gradient-to-r from-primary to-primary-600 rounded-lg p-4 text-white text-center" data-aos="fade-up" data-aos-delay="700">
      <h3 class="text-base font-semibold mb-2">
        Discover More from <%= product.supplier.name %>
      </h3>
      <p class="text-white text-opacity-90 mb-3 text-sm">
        Explore other amazing products from this trusted Rwandan supplier
      </p>
      <a href="/products/supplier/<%= product.supplier._id %>"
         class="bg-white text-primary hover:bg-neutral-100 px-4 py-2 rounded text-sm font-medium transition-colors duration-200 inline-block">
        üè™ Visit Supplier Store
      </a>
    </div>
  </div>
</section>

<script>
  function updateTotal(price, quantity) {
    const total = price * quantity;
    document.getElementById('totalPrice').textContent = total.toLocaleString() + ' RWF';
  }
</script>

<%- include('../partials/footer') %>