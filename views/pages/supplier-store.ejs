<%- include('../partials/header') %>

<!-- Supplier Store Section with Rwandan Design System -->
<section class="py-12 bg-neutral-50 min-h-screen" data-aos="fade-up">
  <div class="container mx-auto px-4">
    <!-- Supplier Header -->
    <div class="bg-white rounded-xl shadow-lg p-8 mb-8" data-aos="fade-up" data-aos-delay="100">
      <div class="flex items-center gap-6">
        <div class="w-20 h-20 bg-primary bg-opacity-10 rounded-full flex items-center justify-center text-4xl">
          üè™
        </div>
        <div class="flex-1">
          <h1 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-2">
            <%= supplier.name %>
          </h1>
          <p class="text-neutral-600 text-lg mb-4">
            Trusted Rwandan supplier offering quality local products
          </p>
          <div class="flex items-center gap-4 text-sm text-neutral-500">
            <span class="flex items-center gap-1">
              <span>üìß</span>
              <%= supplier.email %>
            </span>
            <span class="flex items-center gap-1">
              <span>‚≠ê</span>
              Verified Supplier
            </span>
          </div>
        </div>

        <div class="text-right">
          <div class="text-3xl font-bold text-primary mb-1">
            <%= products.length %>
          </div>
          <div class="text-neutral-600">
            Product<%= products.length !== 1 ? 's' : '' %>
          </div>
        </div>
      </div>
    </div>

    <!-- Request ID for debugging -->
    <% if (typeof requestId !== 'undefined') { %>
      <div class="bg-primary bg-opacity-10 border border-primary border-opacity-20 rounded-lg p-3 mb-6">
        <p class="text-primary text-sm font-medium">Request ID: <%= requestId %></p>
      </div>
    <% } %>

    <% if (products && products.length > 0) { %>
      <!-- Products Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% products.forEach((product, index) => { %>
          <div class="product-card bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-neutral-200 overflow-hidden animate__animated animate__fadeInUp"
               data-aos="fade-up"
               data-aos-delay="<%= 200 + (index * 100) %>"
               style="animation-delay: <%= index * 0.1 %>s;">

            <!-- Product Image -->
            <div class="product-card-image h-48 bg-gradient-to-br from-neutral-200 to-neutral-300 flex items-center justify-center text-6xl relative overflow-hidden">
              üì¶
              <% if (product.stock < 10) { %>
                <div class="absolute top-2 right-2 bg-warning text-warning-900 px-2 py-1 rounded-full text-xs font-bold">
                  Low Stock
                </div>
              <% } %>
            </div>

            <!-- Product Info -->
            <div class="p-6">
              <div class="mb-4">
                <h3 class="text-lg font-bold text-neutral-900 mb-2 line-clamp-2">
                  <%= product.name %>
                </h3>
                <p class="text-neutral-600 text-sm mb-3 line-clamp-3">
                  <%= product.description %>
                </p>

                <!-- Price and Stock -->
                <div class="flex items-center justify-between">
                  <div class="text-2xl font-bold text-rwanda-yellow">
                    <%= product.price.toLocaleString() %> RWF
                  </div>
                  <div class="text-sm text-neutral-500">
                    <%= product.stock %> in stock
                  </div>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex gap-2">
                <a href="/product/<%= product._id %>"
                   class="flex-1 bg-primary hover:bg-primary-600 text-white text-center py-2 px-4 rounded-lg transition-colors duration-200 text-sm font-medium">
                  View Details
                </a>

                <% if (isAuthenticated) { %>
                  <form method="POST" action="/cart/add" class="inline">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit"
                            class="btn-rwanda-secondary py-2 px-3 rounded-lg text-sm">
                      üõí Add
                    </button>
                  </form>
                <% } else { %>
                  <a href="/login"
                     class="btn-rwanda-secondary py-2 px-3 rounded-lg text-sm"
                     title="Login to add to cart">
                    üîí Login
                  </a>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <!-- Store Summary -->
      <div class="mt-12 bg-white rounded-xl shadow-lg p-6" data-aos="fade-up" data-aos-delay="800">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          <div>
            <div class="text-3xl font-bold text-primary mb-2"><%= products.length %></div>
            <div class="text-neutral-600">Total Products</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-rwanda-yellow mb-2">
              <%= products.reduce((sum, p) => sum + p.price, 0).toLocaleString() %> RWF
            </div>
            <div class="text-neutral-600">Combined Value</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-success mb-2">
              <%= products.reduce((sum, p) => sum + p.stock, 0) %>
            </div>
            <div class="text-neutral-600">Items in Stock</div>
          </div>
        </div>
      </div>

    <% } else { %>
      <!-- Empty Store State -->
      <div class="text-center py-16" data-aos="fade-up" data-aos-delay="200">
        <div class="w-32 h-32 bg-neutral-200 rounded-full flex items-center justify-center text-6xl mx-auto mb-6 animate-bounce">
          üè™
        </div>
        <h2 class="text-2xl md:text-3xl font-bold text-neutral-900 mb-4">
          No Products Available
        </h2>
        <p class="text-neutral-600 text-lg mb-8 max-w-md mx-auto">
          <%= supplier.name %> hasn't listed any products yet. Check back soon for amazing Rwandan products!
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/products"
             class="btn-rwanda">
            üõçÔ∏è Browse All Products
          </a>
          <a href="/"
             class="btn-rwanda-secondary">
            üè† Back to Homepage
          </a>
        </div>
      </div>
    <% } %>

    <!-- Supplier Actions (for the supplier themselves) -->
    <% if (isSupplier && supplier._id.toString() === (typeof currentUser !== 'undefined' ? currentUser._id.toString() : '')) { %>
      <div class="mt-8 bg-primary bg-opacity-10 border border-primary border-opacity-20 rounded-xl p-6">
        <h3 class="text-lg font-bold text-primary mb-4">Supplier Actions</h3>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/supplier/add-product"
             class="btn-rwanda text-center">
            ‚ûï Add New Product
          </a>
          <a href="/supplier/dashboard"
             class="btn-rwanda-secondary text-center">
            üìä View Dashboard
          </a>
        </div>
      </div>
    <% } %>

  </div>
</section>

<%- include('../partials/footer') %>