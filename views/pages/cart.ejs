<%- include('../partials/header') %>

<!-- Cart Section with Rwandan Design System -->
<section class="py-12 bg-neutral-50 min-h-screen" data-aos="fade-up">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="mb-8" data-aos="fade-up" data-aos-delay="100">
      <h1 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4 flex items-center gap-3">
        <span class="text-4xl">üõí</span>
        Shopping Cart
      </h1>
      <p class="text-neutral-600 text-lg">
        Review your items and proceed to checkout with Rwanda's trusted payment methods
      </p>
    </div>

    <% if (typeof requestId !== 'undefined') { %>
      <div class="bg-primary bg-opacity-10 border border-primary border-opacity-20 rounded-lg p-3 mb-6">
        <p class="text-primary text-sm font-medium">Request ID: <%= requestId %></p>
      </div>
    <% } %>

    <% if (cart && cart.items && cart.items.length > 0) { %>
      <!-- Cart Items -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8" data-aos="fade-up" data-aos-delay="200">
        <div class="bg-primary text-white px-6 py-4">
          <h2 class="text-xl font-semibold">Cart Items (<%= cart.items.length %>)</h2>
        </div>

        <div class="divide-y divide-neutral-200">
          <% cart.items.forEach((item, index) => { %>
            <div class="p-6 hover:bg-neutral-50 transition-colors duration-200"
                 data-aos="fade-up"
                 data-aos-delay="<%= 300 + (index * 100) %>">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4 flex-1">
                  <div class="w-16 h-16 bg-neutral-200 rounded-lg flex items-center justify-center text-2xl">
                    üì¶
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-neutral-900 mb-1">
                      <%= item.product?.name || 'Product name unavailable' %>
                    </h3>
                    <p class="text-neutral-600 text-sm mb-2">
                      <%= item.product?.description || 'No description available' %>
                    </p>
                    <div class="flex items-center gap-4 text-sm text-neutral-500">
                      <span class="flex items-center gap-1">
                        <span class="font-medium">Unit Price:</span>
                        <span class="font-bold text-primary"><%= item.product?.price || 0 %> RWF</span>
                      </span>
                      <div class="flex items-center gap-2">
                        <span class="font-medium">Quantity:</span>
                        <div class="flex items-center gap-2">
                          <button class="quantity-btn w-8 h-8 bg-neutral-200 hover:bg-neutral-300 rounded-full flex items-center justify-center text-sm font-bold"
                                  data-product-id="<%= item.product && item.product._id ? item.product._id : '' %>"
                                  data-action="decrease"
                                  <%= item.quantity <= 1 ? 'disabled' : '' %>>
                            ‚àí
                          </button>
                          <span class="font-bold text-secondary min-w-[2rem] text-center"><%= item.quantity %></span>
                          <button class="quantity-btn w-8 h-8 bg-neutral-200 hover:bg-neutral-300 rounded-full flex items-center justify-center text-sm font-bold"
                                  data-product-id="<%= item.product && item.product._id ? item.product._id : '' %>"
                                  data-action="increase"
                                  <%= item.quantity >= (item.product && item.product.stock ? item.product.stock : 0) ? 'disabled' : '' %>>
                            +
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="text-right">
                  <div class="text-2xl font-bold text-primary mb-2">
                    <%= ((item.product?.price || 0) * item.quantity).toLocaleString() %> RWF
                  </div>
                  <form method="POST" action="/cart/remove" class="inline">
                    <input type="hidden" name="productId" value="<%= item.product?._id %>">
                    <button type="submit"
                            class="text-error hover:text-error-600 text-sm font-medium transition-colors duration-200"
                            onclick="return confirm('Remove this item from cart?')">
                      üóëÔ∏è Remove
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>

      <!-- Cart Summary -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8" data-aos="fade-up" data-aos-delay="800">
        <h2 class="text-2xl font-bold text-neutral-900 mb-6 flex items-center gap-2">
          <span>üìä</span>
          Cart Summary
        </h2>

        <div class="space-y-4 mb-6">
          <div class="flex justify-between items-center py-3 border-b border-neutral-200">
            <span class="text-neutral-600">Subtotal:</span>
            <span class="text-lg font-semibold text-neutral-900"><%= total.toLocaleString() %> RWF</span>
          </div>
          <div class="flex justify-between items-center py-3 border-b border-neutral-200">
            <span class="text-neutral-600">Shipping:</span>
            <span class="text-lg font-semibold text-success">FREE</span>
          </div>
          <div class="flex justify-between items-center py-3 text-xl font-bold text-neutral-900">
            <span>Total:</span>
            <span class="text-primary"><%= total.toLocaleString() %> RWF</span>
          </div>
        </div>

        <!-- Payment Methods -->
        <div class="mb-8 p-4 bg-neutral-50 rounded-lg">
          <h3 class="font-semibold text-neutral-900 mb-3">Payment Methods Available:</h3>
          <div class="flex gap-3 flex-wrap">
            <div class="bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2">
              üì± MTN Mobile Money
            </div>
            <div class="bg-error text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2">
              üì± Airtel Money
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/products"
             class="btn-rwanda-secondary text-center py-3 px-6">
            üõçÔ∏è Continue Shopping
          </a>
          <% if (isAuthenticated) { %>
            <a href="/checkout"
               class="btn-rwanda text-center py-3 px-6">
              üí≥ Proceed to Checkout
            </a>
          <% } else { %>
            <a href="/login?redirect=/checkout"
               class="btn-rwanda text-center py-3 px-6">
              üîë Login to Checkout
            </a>
          <% } %>
        </div>
      </div>

    <% } else { %>
      <!-- Empty Cart -->
      <div class="text-center py-16" data-aos="fade-up" data-aos-delay="200">
        <div class="w-32 h-32 bg-neutral-200 rounded-full flex items-center justify-center text-6xl mx-auto mb-6 animate-bounce">
          üõí
        </div>
        <h2 class="text-2xl md:text-3xl font-bold text-neutral-900 mb-4">
          Your cart is empty
        </h2>
        <p class="text-neutral-600 text-lg mb-8 max-w-md mx-auto">
          Looks like you haven't added any products to your cart yet. Start shopping and discover amazing Rwandan products!
        </p>
        <a href="/products"
           class="btn-rwanda text-lg px-8 py-4 inline-block">
          üõçÔ∏è Start Shopping
        </a>
      </div>
    <% } %>

    <!-- Error Messages -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-error bg-opacity-10 border border-error border-opacity-20 rounded-lg p-4 mb-6">
        <div class="flex items-center gap-3">
          <span class="text-2xl">‚ö†Ô∏è</span>
          <div>
            <h3 class="font-semibold text-error">Error</h3>
            <p class="text-error text-opacity-80"><%= error %></p>
          </div>
        </div>
      </div>
    <% } %>

  </div>
</section>

<!-- Cart JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle quantity update buttons
  const quantityButtons = document.querySelectorAll('.quantity-btn');

  quantityButtons.forEach(button => {
    button.addEventListener('click', async function() {
      const productId = this.getAttribute('data-product-id');
      const action = this.getAttribute('data-action');

      if (!productId) return;

      try {
        // Disable button temporarily
        this.disabled = true;

        // Find current quantity span
        const quantitySpan = this.parentNode.querySelector('.quantity-btn + span, span + .quantity-btn').previousElementSibling || this.parentNode.querySelector('.quantity-btn + span, span + .quantity-btn').nextElementSibling;
        const currentQuantity = parseInt(quantitySpan.textContent);

        // Calculate new quantity
        let newQuantity = currentQuantity;
        if (action === 'increase') {
          newQuantity = currentQuantity + 1;
        } else if (action === 'decrease') {
          newQuantity = currentQuantity - 1;
        }

        // Update quantity via API
        const response = await fetch('/cart/update-quantity', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            productId: productId,
            quantity: newQuantity
          })
        });

        const result = await response.json();

        if (result.success) {
          // Update the quantity display
          quantitySpan.textContent = newQuantity;

          // Update the total price for this item
          const itemContainer = this.closest('.hover\\:bg-neutral-50');
          const priceElement = itemContainer.querySelector('.text-2xl.font-bold.text-primary');
          if (priceElement) {
            priceElement.textContent = (result.itemTotal || 0).toLocaleString() + ' RWF';
          }

          // Update cart total if available
          const cartTotalElement = document.querySelector('.text-primary.text-xl.font-bold');
          if (cartTotalElement) {
            cartTotalElement.textContent = result.total.toLocaleString() + ' RWF';
          }

          // Update button states
          updateButtonStates();

          // Show success message
          showToast('Quantity updated successfully', 'success');
        } else {
          showToast(result.message || 'Failed to update quantity', 'error');
        }
      } catch (error) {
        console.error('Quantity update error:', error);
        showToast('Failed to update quantity', 'error');
      } finally {
        // Re-enable button
        this.disabled = false;
      }
    });
  });

  function updateButtonStates() {
    const cartItems = document.querySelectorAll('.hover\\:bg-neutral-50');
    cartItems.forEach(item => {
      const decreaseBtn = item.querySelector('[data-action="decrease"]');
      const increaseBtn = item.querySelector('[data-action="increase"]');
      const quantitySpan = item.querySelector('.font-bold.text-secondary');
      const currentQuantity = parseInt(quantitySpan.textContent);

      if (decreaseBtn) {
        decreaseBtn.disabled = currentQuantity <= 1;
      }

      if (increaseBtn) {
        // We need to check stock - for now, assume max 10
        increaseBtn.disabled = currentQuantity >= 10;
      }
    });
  }

  function showToast(message, type = 'info') {
    // Simple toast notification
    const toast = document.createElement('div');
    toast.className = `fixed top-4 right-4 px-6 py-3 rounded-lg text-white z-50 ${
      type === 'success' ? 'bg-success' :
      type === 'error' ? 'bg-error' : 'bg-primary'
    }`;
    toast.textContent = message;

    document.body.appendChild(toast);

    setTimeout(() => {
      toast.remove();
    }, 3000);
  }

  // Initialize button states
  updateButtonStates();
});
</script>

