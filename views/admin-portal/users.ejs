<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/tailwind.css">

  <style>
    .admin-gradient {
      background: linear-gradient(135deg, #00A86B 0%, #059669 100%);
    }
  </style>
</head>
<body class="bg-neutral-900 text-white min-h-screen">
  <!-- Admin Header -->
  <header class="admin-gradient shadow-lg">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
            <span class="text-2xl">🇷🇼</span>
          </div>
          <div>
            <h1 class="text-2xl md:text-3xl font-bold">Admin Portal</h1>
            <p class="text-white text-opacity-80">User Management</p>
          </div>
        </div>

        <div class="flex items-center gap-4">
          <a href="/admin-portal" class="bg-white bg-opacity-20 hover:bg-opacity-30 px-4 py-2 rounded-lg transition-all duration-200">
            Dashboard
          </a>
          <a href="/logout" class="bg-white bg-opacity-20 hover:bg-opacity-30 px-4 py-2 rounded-lg transition-all duration-200">
            Logout
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <!-- Request ID for debugging -->
    <% if (typeof requestId !== 'undefined') { %>
      <div class="bg-primary bg-opacity-20 border border-primary border-opacity-30 rounded-lg p-3 mb-6">
        <p class="text-primary text-sm font-mono">Request ID: <%= requestId %></p>
      </div>
    <% } %>

    <!-- Page Header -->
    <div class="mb-8">
      <h2 class="text-3xl font-bold mb-2 flex items-center gap-3">
        <span class="text-4xl">👥</span>
        User Management
      </h2>
      <p class="text-neutral-400 text-lg">
        Manage customers, suppliers, and administrators
      </p>
    </div>

    <!-- Users Table -->
    <div class="bg-neutral-800 rounded-xl overflow-hidden">
      <div class="bg-neutral-700 px-6 py-4 border-b border-neutral-600">
        <h3 class="text-xl font-semibold">
          All Users (<%= users.length %> on this page)
        </h3>
      </div>

      <% if (users && users.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-neutral-700">
              <tr>
                <th class="px-6 py-4 text-left text-neutral-300 font-semibold">User</th>
                <th class="px-6 py-4 text-left text-neutral-300 font-semibold">Role</th>
                <th class="px-6 py-4 text-left text-neutral-300 font-semibold">Status</th>
                <th class="px-6 py-4 text-left text-neutral-300 font-semibold">Joined</th>
                <th class="px-6 py-4 text-left text-neutral-300 font-semibold">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-neutral-700">
              <% users.forEach((user, index) => { %>
                <tr class="hover:bg-neutral-700 transition-colors duration-200">
                  <td class="px-6 py-4">
                    <div>
                      <div class="font-semibold text-white"><%= user.name %></div>
                      <div class="text-neutral-400 text-sm"><%= user.email %></div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="px-3 py-1 rounded-full text-xs font-medium
                      <%= user.role === 'admin' ? 'bg-error text-error-900' : '' %>
                      <%= user.role === 'supplier' ? 'bg-warning text-warning-900' : '' %>
                      <%= user.role === 'customer' ? 'bg-success text-success-900' : '' %>">
                      <%= user.role || 'customer' %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-success text-success-900">
                      Active
                    </span>
                  </td>
                  <td class="px-6 py-4 text-neutral-400 text-sm">
                    <%= new Date(user.createdAt).toLocaleDateString() %>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex gap-2">
                      <button onclick="viewUserDetails('<%= user._id %>')"
                              class="bg-primary hover:bg-primary-600 text-white px-3 py-2 rounded text-sm transition-colors duration-200">
                        View
                      </button>
                      <% if (user.role !== 'admin') { %>
                        <button onclick="changeUserRole('<%= user._id %>', '<%= user.role %>')"
                                class="bg-secondary hover:bg-yellow-500 text-white px-3 py-2 rounded text-sm transition-colors duration-200">
                          Change Role
                        </button>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
          <div class="bg-neutral-700 px-6 py-4 flex items-center justify-between">
            <div class="text-neutral-400 text-sm">
              Page <%= currentPage %> of <%= totalPages %>
            </div>
            <div class="flex gap-2">
              <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>"
                   class="bg-neutral-600 hover:bg-neutral-500 text-white px-3 py-2 rounded transition-colors duration-200">
                  Previous
                </a>
              <% } %>

              <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>"
                   class="bg-primary hover:bg-primary-600 text-white px-3 py-2 rounded transition-colors duration-200">
                  Next
                </a>
              <% } %>
            </div>
          </div>
        <% } %>

      <% } else { %>
        <div class="text-center py-16">
          <div class="text-6xl mb-4">👥</div>
          <h3 class="text-xl font-semibold text-neutral-300 mb-2">No Users Found</h3>
          <p class="text-neutral-400">No users match your current criteria.</p>
        </div>
      <% } %>
    </div>

    <!-- User Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
      <div class="bg-neutral-800 rounded-xl p-6 text-center">
        <div class="text-3xl mb-2">👨‍💼</div>
        <div class="text-2xl font-bold text-white mb-1">
          <%= users.filter(u => u.role === 'admin').length %>
        </div>
        <div class="text-neutral-400">Administrators</div>
      </div>

      <div class="bg-neutral-800 rounded-xl p-6 text-center">
        <div class="text-3xl mb-2">🏪</div>
        <div class="text-2xl font-bold text-white mb-1">
          <%= users.filter(u => u.role === 'supplier').length %>
        </div>
        <div class="text-neutral-400">Suppliers</div>
      </div>

      <div class="bg-neutral-800 rounded-xl p-6 text-center">
        <div class="text-3xl mb-2">🛍️</div>
        <div class="text-2xl font-bold text-white mb-1">
          <%= users.filter(u => u.role === 'customer').length %>
        </div>
        <div class="text-neutral-400">Customers</div>
      </div>
    </div>
  </main>

  <!-- User Details Modal (Simple Implementation) -->
  <div id="userModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-neutral-800 rounded-xl p-6 max-w-md mx-4">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-bold text-white">User Details</h3>
        <button onclick="closeUserModal()" class="text-neutral-400 hover:text-white text-2xl">&times;</button>
      </div>
      <div id="userDetailsContent">
        <p class="text-neutral-400">Loading user details...</p>
      </div>
    </div>
  </div>

    <!-- User Data for JavaScript -->
    <div id="usersData" style="display: none;"><%= JSON.stringify(users) %></div>

  <!-- Scripts -->
  <script>
    // Pass users data to JavaScript
    const usersData = JSON.parse(document.getElementById('usersData').textContent);

    function viewUserDetails(userId) {
      // Simple modal implementation
      const modal = document.getElementById('userModal');
      const content = document.getElementById('userDetailsContent');

      // Find user data
      const user = usersData.find(u => u._id === userId);

      if (user) {
        content.innerHTML = `
          <div class="space-y-3">
            <div>
              <label class="block text-neutral-400 text-sm mb-1">Name:</label>
              <p class="text-white font-medium">${user.name}</p>
            </div>
            <div>
              <label class="block text-neutral-400 text-sm mb-1">Email:</label>
              <p class="text-white">${user.email}</p>
            </div>
            <div>
              <label class="block text-neutral-400 text-sm mb-1">Role:</label>
              <p class="text-white capitalize">${user.role || 'customer'}</p>
            </div>
            <div>
              <label class="block text-neutral-400 text-sm mb-1">Joined:</label>
              <p class="text-white">${new Date(user.createdAt).toLocaleDateString()}</p>
            </div>
          </div>
        `;
      }

      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }

    function closeUserModal() {
      const modal = document.getElementById('userModal');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }

    function changeUserRole(userId, currentRole) {
      const newRole = prompt(`Change role for user (current: ${currentRole})?\n\nAvailable roles:\n- customer\n- supplier\n- admin`);
      if (newRole && ['customer', 'supplier', 'admin'].includes(newRole)) {
        // Here you would make an API call to update the user role
        alert(`Role change request sent for user ${userId} to ${newRole}`);
        // In a real implementation, you'd make a POST request to update the user role
      }
    }

    // Close modal when clicking outside
    document.getElementById('userModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeUserModal();
      }
    });
  </script>
</body>
</html>