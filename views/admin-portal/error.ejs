<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/tailwind.css">

  <style>
    .admin-gradient {
      background: linear-gradient(135deg, #00A86B 0%, #059669 100%);
    }
  </style>
</head>
<body class="bg-neutral-900 text-white min-h-screen">
  <!-- Admin Header -->
  <header class="admin-gradient shadow-lg">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
            <span class="text-2xl">🇷🇼</span>
          </div>
          <div>
            <h1 class="text-2xl md:text-3xl font-bold">Admin Portal</h1>
            <p class="text-white text-opacity-80">Ecommerce Rwanda Management</p>
          </div>
        </div>

        <div class="flex items-center gap-4">
          <a href="/admin-portal" class="bg-white bg-opacity-20 hover:bg-opacity-30 px-4 py-2 rounded-lg transition-all duration-200">
            Back to Dashboard
          </a>
          <a href="/logout" class="bg-white bg-opacity-20 hover:bg-opacity-30 px-4 py-2 rounded-lg transition-all duration-200">
            Logout
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <!-- Request ID for debugging -->
    <% if (typeof requestId !== 'undefined') { %>
      <div class="bg-primary bg-opacity-20 border border-primary border-opacity-30 rounded-lg p-3 mb-6">
        <p class="text-primary text-sm font-mono">Request ID: <%= requestId %></p>
      </div>
    <% } %>

    <!-- Error Section -->
    <div class="max-w-2xl mx-auto text-center">
      <div class="mb-8">
        <div class="w-24 h-24 bg-error bg-opacity-20 rounded-full flex items-center justify-center text-6xl mx-auto mb-6">
          ⚠️
        </div>
        <h1 class="text-4xl font-bold text-white mb-4">
          <%= typeof status !== 'undefined' ? status : 'Error' %>
        </h1>
        <h2 class="text-xl font-semibold text-neutral-300 mb-4">
          <%= message || 'Something went wrong' %>
        </h2>
        <p class="text-neutral-400 leading-relaxed">
          <%= typeof status !== 'undefined' && status === 404
            ? 'The page you are looking for could not be found.'
            : 'An error occurred while processing your request. Please try again or contact support if the problem persists.' %>
        </p>
      </div>

      <!-- Error Details (Development Mode) -->
      <% if (typeof error !== 'undefined' && error && process.env.NODE_ENV === 'development') { %>
        <div class="bg-neutral-800 rounded-lg p-6 mb-8 text-left">
          <h3 class="font-semibold text-error mb-3">Error Details (Development Mode):</h3>
          <div class="bg-neutral-900 rounded p-4 font-mono text-sm overflow-x-auto">
            <div class="text-error font-semibold mb-2">Message:</div>
            <div class="text-neutral-300 mb-4"><%= error.message %></div>

            <% if (error.stack) { %>
              <div class="text-warning font-semibold mb-2">Stack Trace:</div>
              <div class="text-neutral-400 text-xs leading-relaxed"><%= error.stack %></div>
            <% } %>
          </div>
        </div>
      <% } %>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/admin-portal"
           class="bg-primary hover:bg-primary-600 text-white px-6 py-3 rounded-lg transition-colors duration-200 font-medium">
          🏠 Back to Dashboard
        </a>
        <button onclick="window.history.back()"
                class="bg-neutral-700 hover:bg-neutral-600 text-white px-6 py-3 rounded-lg transition-colors duration-200 font-medium">
          🔙 Go Back
        </button>
        <a href="/"
           class="bg-secondary hover:bg-yellow-500 text-white px-6 py-3 rounded-lg transition-colors duration-200 font-medium">
          🛍️ Main Site
        </a>
      </div>

      <!-- Help Text -->
      <div class="mt-8 p-4 bg-neutral-800 bg-opacity-50 rounded-lg">
        <h3 class="font-semibold text-rwanda-yellow mb-2">Need Help?</h3>
        <p class="text-neutral-400 text-sm">
          If this error persists, please check the console logs for more details or contact the development team.
        </p>
      </div>
    </div>
  </main>
</body>
</html>