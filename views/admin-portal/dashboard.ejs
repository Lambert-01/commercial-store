<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/tailwind.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

  <style>
    .admin-gradient {
      background: linear-gradient(135deg, #00A86B 0%, #059669 100%);
    }
    .stat-card {
      background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.1);
    }
  </style>
</head>
<body class="bg-neutral-900 text-white min-h-screen">
  <!-- Admin Header -->
  <header class="admin-gradient shadow-lg">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
            <span class="text-2xl">🇷🇼</span>
          </div>
          <div>
            <h1 class="text-2xl md:text-3xl font-bold">Admin Portal</h1>
            <p class="text-white text-opacity-80">Ecommerce Rwanda Management</p>
          </div>
        </div>

        <div class="flex items-center gap-4">
          <div class="text-right">
            <p class="font-semibold"><%= typeof currentUser !== 'undefined' ? currentUser.name : 'Admin User' %></p>
            <p class="text-sm text-white text-opacity-80">Administrator</p>
          </div>
          <a href="/logout" class="bg-white bg-opacity-20 hover:bg-opacity-30 px-4 py-2 rounded-lg transition-all duration-200">
            Logout
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <!-- Request ID for debugging -->
    <% if (typeof requestId !== 'undefined') { %>
      <div class="bg-primary bg-opacity-20 border border-primary border-opacity-30 rounded-lg p-3 mb-6">
        <p class="text-primary text-sm font-mono">Request ID: <%= requestId %></p>
      </div>
    <% } %>

    <!-- Page Header -->
    <div class="mb-8">
      <h2 class="text-3xl font-bold mb-2 flex items-center gap-3">
        <span class="text-4xl">📊</span>
        Dashboard Overview
      </h2>
      <p class="text-neutral-400 text-lg">
        Monitor your e-commerce platform performance and manage operations
      </p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Users -->
      <div class="stat-card rounded-xl p-6 text-center">
        <div class="text-4xl mb-3">👥</div>
        <div class="text-3xl font-bold text-white mb-1"><%= stats.totalUsers.toLocaleString() %></div>
        <div class="text-neutral-300">Total Users</div>
      </div>

      <!-- Total Products -->
      <div class="stat-card rounded-xl p-6 text-center">
        <div class="text-4xl mb-3">📦</div>
        <div class="text-3xl font-bold text-white mb-1"><%= stats.totalProducts.toLocaleString() %></div>
        <div class="text-neutral-300">Total Products</div>
      </div>

      <!-- Total Orders -->
      <div class="stat-card rounded-xl p-6 text-center">
        <div class="text-4xl mb-3">🛒</div>
        <div class="text-3xl font-bold text-white mb-1"><%= stats.totalOrders.toLocaleString() %></div>
        <div class="text-neutral-300">Total Orders</div>
      </div>

      <!-- Total Revenue -->
      <div class="stat-card rounded-xl p-6 text-center">
        <div class="text-4xl mb-3">💰</div>
        <div class="text-3xl font-bold text-rwanda-yellow mb-1"><%= stats.totalRevenue.toLocaleString() %> RWF</div>
        <div class="text-neutral-300">Total Revenue</div>
      </div>
    </div>

    <!-- Quick Actions & Pending Items -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Quick Actions -->
      <div class="bg-neutral-800 rounded-xl p-6">
        <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
          <span class="text-2xl">⚡</span>
          Quick Actions
        </h3>
        <div class="space-y-3">
          <a href="/admin-portal/users"
             class="block bg-primary hover:bg-primary-600 text-white px-4 py-3 rounded-lg transition-colors duration-200">
            👥 Manage Users
          </a>
          <a href="/admin-portal/products"
             class="block bg-secondary hover:bg-yellow-500 text-white px-4 py-3 rounded-lg transition-colors duration-200">
            📦 Product Approval
            <% if (stats.pendingProducts > 0) { %>
              <span class="bg-error text-white px-2 py-1 rounded-full text-xs ml-2">
                <%= stats.pendingProducts %> pending
              </span>
            <% } %>
          </a>
          <a href="/admin-portal/orders"
             class="block bg-accent hover:bg-blue-600 text-white px-4 py-3 rounded-lg transition-colors duration-200">
            📋 Order Tracking
          </a>
        </div>
      </div>

      <!-- Pending Approvals -->
      <div class="bg-neutral-800 rounded-xl p-6">
        <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
          <span class="text-2xl">⏳</span>
          Pending Approvals
        </h3>
        <% if (stats.pendingApprovals && stats.pendingApprovals.length > 0) { %>
          <div class="space-y-3">
            <% stats.pendingApprovals.forEach((product, index) => { %>
              <div class="bg-neutral-700 rounded-lg p-4">
                <div class="flex justify-between items-start">
                  <div>
                    <h4 class="font-semibold text-white"><%= product.name %></h4>
                    <p class="text-neutral-300 text-sm">by <%= product.supplier?.name || 'Unknown Supplier' %></p>
                    <p class="text-neutral-400 text-sm"><%= product.price %> RWF</p>
                  </div>
                  <span class="bg-warning text-neutral-900 px-2 py-1 rounded text-xs font-medium">
                    Pending
                  </span>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-center py-8">
            <div class="text-4xl mb-3">✅</div>
            <p class="text-neutral-400">No pending approvals</p>
            <p class="text-neutral-500 text-sm">All products are up to date</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Recent Orders -->
    <div class="mt-8">
      <div class="bg-neutral-800 rounded-xl p-6">
        <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
          <span class="text-2xl">🕐</span>
          Recent Orders
        </h3>

        <% if (stats.recentOrders && stats.recentOrders.length > 0) { %>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-neutral-700">
                  <th class="text-left py-3 px-4 text-neutral-300">Order #</th>
                  <th class="text-left py-3 px-4 text-neutral-300">Customer</th>
                  <th class="text-left py-3 px-4 text-neutral-300">Amount</th>
                  <th class="text-left py-3 px-4 text-neutral-300">Status</th>
                  <th class="text-left py-3 px-4 text-neutral-300">Date</th>
                </tr>
              </thead>
              <tbody>
                <% stats.recentOrders.forEach(order => { %>
                  <tr class="border-b border-neutral-700 hover:bg-neutral-700">
                    <td class="py-3 px-4">
                      <span class="font-mono text-sm text-primary">#<%= order._id.toString().substr(-8) %></span>
                    </td>
                    <td class="py-3 px-4">
                      <div>
                        <div class="font-medium text-white"><%= order.customer?.name || 'Unknown' %></div>
                        <div class="text-neutral-400 text-sm"><%= order.customer?.email || '' %></div>
                      </div>
                    </td>
                    <td class="py-3 px-4">
                      <span class="font-semibold text-rwanda-yellow"><%= order.total?.toLocaleString() || 0 %> RWF</span>
                    </td>
                    <td class="py-3 px-4">
                      <span class="px-2 py-1 rounded-full text-xs font-medium
                        <%= order.status === 'completed' ? 'bg-success text-success-900' : '' %>
                        <%= order.status === 'pending' ? 'bg-warning text-warning-900' : '' %>
                        <%= order.status === 'cancelled' ? 'bg-error text-error-900' : '' %>
                        <%= order.status === 'shipped' ? 'bg-primary text-primary-900' : '' %>">
                        <%= order.status || 'unknown' %>
                      </span>
                    </td>
                    <td class="py-3 px-4 text-neutral-400 text-sm">
                      <%= new Date(order.createdAt).toLocaleDateString() %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center py-8">
            <div class="text-4xl mb-3">📭</div>
            <p class="text-neutral-400">No recent orders</p>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <!-- Scripts -->
  <script src="/js/admin.js"></script>
  <script>
    // Auto-refresh dashboard data every 30 seconds
    setInterval(() => {
      // Refresh stats via AJAX if needed
      console.log('Dashboard auto-refresh check...');
    }, 30000);

    // Add some interactive animations
    document.addEventListener('DOMContentLoaded', function() {
      // Animate stat cards on load
      const statCards = document.querySelectorAll('.stat-card');
      statCards.forEach((card, index) => {
        setTimeout(() => {
          card.style.transform = 'translateY(0)';
          card.style.opacity = '1';
        }, index * 100);
      });
    });
  </script>
</body>
</html>