{
  "name": "ecommerce-rwanda",
  "version": "1.0.0",
  "description": "Production-ready multi-vendor e-commerce system for Rwanda",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:css && npm run build:js && npm run build:tailwind",
    "build:css": "postcss public/css/style.css -o public/css/style.min.css",
    "build:js": "terser public/js/main.js -o public/js/main.min.js",
    "build:tailwind": "tailwindcss -i ./src/css/input.css -o ./public/css/tailwind.css --watch",
    "dev:tailwind": "tailwindcss -i ./src/css/input.css -o ./public/css/tailwind.css --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "seed": "node scripts/seed.js",
    "docker:build": "docker build -t ecommerce-rwanda .",
    "docker:run": "docker run -p 3000:3000 ecommerce-rwanda"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "aos": "^2.3.4",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "csurf": "^1.11.0",
    "daisyui": "^4.4.19",
    "dompurify": "^3.0.6",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "marked": "^9.1.6",
    "mongoose": "^7.5.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.5",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "postcss": "^8.4.32",
    "redis": "^4.6.11",
    "slugify": "^1.6.6",
    "stripe": "^14.9.0",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "terser": "^5.24.0"
  },
  "keywords": [
    "ecommerce",
    "nodejs",
    "mongodb",
    "rwanda",
    "mobile-money",
    "multi-vendor"
  ],
  "author": "Ecommerce Rwanda Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
